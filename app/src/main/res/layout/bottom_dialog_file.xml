<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_dialog_bottom">
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tvHeader"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Thông tin bệnh nhân"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/llContent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:text="Mã bệnh nhân"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvid"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:text="Họ và tên"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Tào Hải Hưng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:text="Số điện thoại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvPhone"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="0971992583"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:text="Ngày sinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="31/08/2002"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:text="Giới tính"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSex"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:text="Địa chỉ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvAddress"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Hà Nội"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:text="Công việc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvWork"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Sinh viên"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_margin="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="hung2002@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/llOption"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                android:background="#cccccc"
                android:text="Điều chỉnh"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/colorBackground"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:background="@color/colorBackground"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
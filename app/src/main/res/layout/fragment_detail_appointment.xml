<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.appdoctor.view.appointment.AppointmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:id="@+id/llHeader"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorBackground">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/icon_back"
                />
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Phiếu khám"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            app:layout_constraintTop_toBottomOf="@id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="150dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewTitle"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/llHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="center"
                                android:layout_marginStart="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:text="Tên bác sĩ"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="20dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:gravity="center"
                                    android:text="STT"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/tvStt"
                                    android:textSize="30dp"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="@color/colorBackground"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <ImageView
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="IdBenhNhan"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/qr"
                                />
                        </LinearLayout>
                        <TextView
                            android:textSize="16dp"
                            android:layout_marginStart="20dp"
                            android:id="@+id/tvStatus"
                            android:text="Đã đăng ký"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:id="@+id/viewLinePK"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/cardviewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_horizontal_dotted_line"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewPK"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/viewLinePK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Mã phiếu khám"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvIdPK"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="IdPK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginEnd="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Ngày khám"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvDateBooking"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="20/10/2023"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginEnd="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Giờ khám"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvHour"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="17:55-18:00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginEnd="20dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:textSize="16dp"
                    android:layout_margin="20dp"
                    android:id="@+id/tvDetailRegister"
                    app:layout_constraintTop_toBottomOf="@id/cardviewBooking"
                    android:text="Thông tin đăng ký khám"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewDoctor"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDetailRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvNameDoctor"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Tên bác sĩ"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_weight="1"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:padding="10dp"
                                android:id="@+id/ivImage"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/img_doctor_one"
                                android:layout_marginStart="150dp"/>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:id="@+id/viewLineRegister"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/cardviewDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_horizontal_dotted_line"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewChuyenKhoa"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/viewLineRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvTitleAddressOrDep"
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Chuyên Khoa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvAddressOrDep"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="ChuyenKhoa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginEnd="20dp"/>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:textSize="16dp"
                    android:layout_margin="20dp"
                    android:id="@+id/tvDetailCustomer"
                    app:layout_constraintTop_toBottomOf="@id/cardviewPK"
                    android:text="Thông tin bệnh nhân"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewCustomer"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDetailCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Mã bệnh nhân"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvIdCustomer"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="IdBenhNhan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginEnd="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Họ và tên "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvNameCustomer"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="Tên bệnh nhân"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginEnd="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Ngày sinh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvDate"
                                android:textColor="@color/black"
                                android:layout_weight="1"
                                android:text="01/01/1990"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginEnd="20dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:id="@+id/viewLine"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/cardviewCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_horizontal_dotted_line"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewBooking"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnDetail"
                                android:textStyle="bold"
                                android:textColor="@color/colorBackground"
                                android:text="Chi tiết"
                                android:textAllCaps="false"
                                android:background="#ffffff"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"/>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/cardviewChuyenKhoa"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:text="Tổng đài hỗ trợ chăm sóc khách hàng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="center"
                        android:text="1900-2805"
                        android:textColor="@color/colorBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
<!--        LinnerLayout-->
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelete"
                android:text="Hủy Lịch"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_margin="20dp"
                android:layout_height="50dp"
                android:background="@drawable/color_bt"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReset"
                android:text=" Đặt lại lịch khám"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_margin="20dp"
                android:layout_height="50dp"
                android:background="@drawable/color_bt"
                android:visibility="gone"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>